<Window x:Class="ReactiveGit.Demo.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:ReactiveGit.Demo.Views"
        Title="ShellView" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Content="Open Repository" Margin="10" x:Name="openRepository" />
        
        <views:RepositoryView x:Name="selectedRepository" Grid.Row="1" Visibility="Collapsed" />
    </Grid>
</Window>
